{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*.ts", "*/.ts", "*/.tsx", "**/*.ts",
  "./types/types.d.ts"],
  "exclude": ["node_modules"]
}
